pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                script {
                    // Checkout code from Git
                    checkout scm
                }
            }
        }
        stage('Build') {
            steps {
                script {
                    // Install dependencies
                    sh 'pip install -r requirements.txt'
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    // Run tests
                    sh 'pytest'
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    // Deploy your Flask application
                    sh 'python3 run.py'
                }
            }
        }
    }
}
